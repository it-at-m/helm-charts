{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "customManagers:helmChartYamlAppVersions", "github>it-at-m/refarch//refarch-tools/refarch-renovate/refarch-renovate-config.json5"],
  "registryAliases": {
    "it-at-m": "https://it-at-m.github.io/helm-charts"
  },
  "packageRules": [
    {
      "matchFileNames": ["charts/**"],
      "bumpVersions": [
        {
          "name": "Bump Helm chart version",
          "filePatterns": ["{{packageFileDir}}/Chart.{yaml,yml}"],
          "matchStrings": ["version:\\s(?<version>[^\\s]+)"],
          "bumpType": "patch"
        }
      ]
    }
  ]
}
